<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
    default-lazy-init="true">
  <import resource="adminTestContext.xml" />

  <bean id="articleSyndicationHistory" class="org.ambraproject.admin.action.ArticleSyndicationHistory">
    <property name="ambraConfiguration" ref="configuration"/>
    <property name="adminService" ref="adminService"/>
    <property name="syndicationService" ref="syndicationService"/>
  </bean>

  <bean id="manageFlagsAction" class="org.ambraproject.admin.action.ManageFlagsAction">
    <property name="ratingsService" ref="ratingsService"/>
    <property name="annotationConverter" ref="annotationConverter"/>
    <property name="annotationService" ref="annotationService"/>
    <property name="ambraConfiguration" ref="configuration"/>
    <property name="flagManagementService" ref="flagManagementService"/>
    <property name="adminService" ref="adminService"/>
    <property name="replyService" ref="replyService"/>
  </bean>

  <bean id="assignAdminRoleAction" class="org.ambraproject.user.action.AssignAdminRoleAction">
    <property name="ambraConfiguration" ref="configuration"/>
    <property name="userService" ref="userService"/>
  </bean>

  <bean id="searchUserAction" class="org.ambraproject.user.action.SearchUserAction">
    <property name="ambraConfiguration" ref="configuration"/>
    <property name="userService" ref="userService"/>
    <property name="adminService" ref="adminService"/>
  </bean>

</beans>